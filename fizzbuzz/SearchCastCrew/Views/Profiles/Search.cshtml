@model SearchCastCrew.Models.SearchFilterVm

@{
    ViewBag.Title = "Search For talent";
}
<!-- Latest compiled and minified CSS -->
<link href="css/bootstrap.css" rel="stylesheet" />
<!-- Tiles theme CSS -->
<link href="/css/Style.css" rel="stylesheet" />
<!--Sidebar CSS-->
<link href="css/simple-sidebar.css" rel="stylesheet" />
<!--Social Fonts-->
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<br /><br /><br /><br /><br /><br />

<div class="container">


    <div class="row">
        <div class="col-2 col-sm-2 col-lg-2">

            <h2>Search Talent</h2>

            @using (Html.BeginForm())
            {
                <div class="form-horizontal">

                    <hr />

                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control input-sm talent-input" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control  input-sm" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control  input-sm" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Zip, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control  input-sm" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HeightInInches, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HeightInInches, new { htmlAttributes = new { @class = "form-control  input-sm" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control  input-sm" } })
                        </div>
                    </div>
                   

                    <div class="form-group">
                        @Html.LabelFor(model => model.AgeRangeId, "Age Range", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.AgeRangeId, Model.AgeRangeList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HairColorId, "Hair Color", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.HairColorId, Model.HairColorList, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EyeColorId, "Eye Color", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.EyeColorId, Model.EyeColorList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GenderId, "Gender", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.GenderId, Model.GenderList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BodyTypeId, "Body Type", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.BodyTypeId, Model.BodyTypeList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EthnicityId, "Ethnicity", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.EthnicityId, Model.EthnicityList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AvailabilityId, "Availability", htmlAttributes: new { @class = "control-label col-md-7" })
                        <br /><br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.AvailabilityId, Model.AvailabilityList, htmlAttributes: new { @class = "form-control  input-sm" })
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="text-center">
                                <input type="submit" value="Search" class="btn btn-default" />
                                <br />
                                <br />
                                <a href="@Url.Action("Search", "Profiles")" class="btn btn-default">Reset Form</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>



        <div class="col-9 col-sm-9 col-lg-9 right">
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <div class="row">
                        @foreach (var item in Model.UserList)
                        {
                            <div class="col-md-4">
                                <div class="thumbnail">
                                    @if (@item.ImageUrl == null)
                                    {
                                        <img alt="300x200" src="http://www.trialguides.com/images/authors/placeholder.jpg" />
                                    }
                                    else
                                    {
                                        <img alt="300x200" src="@item.ImageUrl.ImgUrl" />
                                    }
                                    <div class="caption">
                                        <h3>
                                            @item.FirstName @item.LastName
                                        </h3>
                                        <p>
                                            - @item.Title
                                            - @item.City, @item.State
                                        </p>
                                        <p>
                                            <a class="btn btn-primary" href="@Url.Action("ViewProfile", "Home", new { uid = item.UserId })">View Profile</a> @*<a class="btn" href="#">Contact</a>*@
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <ul class="pagination">
                        <li>
                            <a href="#">Prev</a>
                        </li>
                        <li>
                            <a href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<style>
    .input-sm {
        height: 26px;
    }

    .form-group {
        margin-bottom: 0;
    }

    select.input-sm {
        height: 29px;
    }
</style>


